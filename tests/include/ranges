// ranges shim for std libraries that haven't caught up

#include <range/v3/view/subrange.hpp>

namespace std
{
	namespace ranges
	{
		using ::ranges::subrange_kind;

		template<typename I, typename S = I,
		  ::ranges::subrange_kind K =
		    static_cast<::ranges::subrange_kind>(::ranges::detail::is_sized_sentinel_<S, I>())>
		using subrange = ::ranges::subrange<I, S, K>;

		using ::ranges::make_subrange;
	} // namespace ranges
} // namespace std
